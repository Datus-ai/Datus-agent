{
  "mcp_servers": {
    "snowflake_local": {
      "type": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "${HOME}//src/mcp-snowflake-server",
        "run",
        "mcp_snowflake_server",
        "--log_dir",
        "/Users/linghongbo/src/mcp-snowflake-server/logs/",
        "--log_level",
        "DEBUG"
      ]
    },
    "metricflow": {
      "type": "stdio",
      "command": "/Users/linghongbo/miniconda3/bin/uv",
      "args": [
        "--directory",
        "/Users/linghongbo/src/Datus-agent/mcp/mcp-metricflow-server",
        "run",
        "mcp-metricflow-server"
      ],
      "env": {
        "MF_PROJECT_DIR": "/Users/linghongbo/.metricflow/sample_models"
      }
    },
    "api_server_sse": {
      "type": "sse",
      "url": "${API_BASE_URL:-http://localhost:8000}/sse",
        "headers": {
          "Authorization": "Bearer ${API_KEY}",
          "Content-Type": "application/json",
          "User-Agent": "OpenAI-Agent-SDK/1.0"
        },
      "timeout": 30
    },
    "api_server_http": {
      "type": "http",
      "url": "${API_BASE_URL:-http://localhost:8000/sse}/mcp",
        "headers": {
          "Authorization": "Bearer ${API_KEY}",
          "Content-Type": "application/json",
          "User-Agent": "OpenAI-Agent-SDK/1.0"
        }
    },
    "filesystem": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/linghongbo/.metricflow/sample_models"
      ]
    }
  }
}